@model bookbookiev11.Models.BookModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid text-center" style="margin-bottom: 30px;padding: 25px;">
    <img src="~/images/BookBookielogo.png" />
    <h1 class="display-1"> Welcome To Your Last Book Store.</h1>
</div>

<div class="container-fluid bg-dark text-center text-white" style="padding: 25px;">
    <h1 class="display-1">Book Details</h1>
</div>
<div class="container"style="margin-top: 30px; margin-bottom: 30px;">
    <div class="card mb-3" style="max-width: 100%">
        <div class="row g-0">
            <div class="col-md-4 ">
                <img src=@("~/images/"+ Model.ImageName) asp-append-version="true" class="card-img-top" />
            </div>
            <div class="col-lg-8">
                <div class="card text-center">
                    <div class="card-header">
                        @Html.DisplayFor(model => model.title)
                        <div class="card-body">
                            <h5 class="card-title">Author: @Html.DisplayFor(model => model.author)</h5>
                            <p class="card-text">Description: @Html.DisplayFor(model => model.description)</p>
                            <p class="card-text">Price: $@Html.DisplayFor(model => model.price)</p>
                            <p class="card-text">ISBN: @Html.DisplayFor(model => model.ISBN)</p>
                            <p class="card-text">ISBN13: @Html.DisplayFor(model => model.ISBN13)</p>
                            <a href="/Checkout/Index" class="btn btn-success">Add To Cart</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.title)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.title)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ImageName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ImageName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.author)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.author)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.price)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.price)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.description)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ISBN)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ISBN)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ISBN13)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ISBN13)
                </dd>
            </dl>
        </div>
        <div>
            <a class="btn btn-success" asp-action="Index">Back to List</a>
        </div>
